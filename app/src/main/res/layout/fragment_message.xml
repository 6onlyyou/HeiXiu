<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Fl_message"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.heixiu.errand.MVP.Message.MessageFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/message_setting"
            android:layout_gravity="center_vertical"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="18dp"
            android:src="@mipmap/seting" />

        <TextView
            android:background="@color/colorPrimary"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="个人中心" />

        <com.heixiu.errand.widget.CircleImageView
            android:id="@+id/message_hard"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:src="@mipmap/ic_launcher" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginTop="44dp"
        android:background="@mipmap/message_bg">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout

                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/layout_border"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginLeft="49dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="今日榜单"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/message_tadayRank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/layout_border"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginLeft="34dp"
                android:layout_marginRight="34dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="今日净赚"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/message_todayMenoy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="13"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/layout_border"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginRight="49dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="好友排行"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/message_friendRank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="13"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/message_ranking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="12dp"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="查看好友排行榜"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="3dp"
                android:src="@mipmap/my_more" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="274dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/message_issued"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/corners_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
           >

            <ImageView
                android:layout_marginLeft="16dp"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/my_issue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="我发布的"
                android:textColor="#000"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/message_mytasks"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/corners_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_marginLeft="16dp"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/my_task" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="我的任务"
                android:textColor="#000"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/message_mymessager"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/corners_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_marginLeft="16dp"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/my_task" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="我的消息"
                android:textColor="#000"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/message_count"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/rad_color"
                android:textSize="12sp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:visibility="gone"
            android:background="@drawable/corners_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
       >

            <ImageView
                android:layout_marginLeft="16dp"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/my_express" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="我的快递"
                android:textColor="#000"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/message_address"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/corners_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_marginLeft="16dp"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/my_goods" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="收货信息"
                android:textColor="#000"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/message_coupons"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/corners_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_marginLeft="16dp"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/coupon" />

            <TextView
                android:layout_width="83dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="优惠劵"
                android:textColor="#000"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/message_wallet"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/corners_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_marginLeft="16dp"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/my_wallet" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="钱包"
                android:textColor="#000"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
