<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    android:orientation="vertical"
    tools:context="com.heixiu.errand.MVP.Message.PersonalPageActivity">

    <include layout="@layout/comm_title" />

    <TextView
        android:id="@+id/personal_compile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:background="@color/white"
        android:drawablePadding="6dp"
        android:drawableRight="@mipmap/personal_in"
        android:gravity="right|center"
        android:paddingRight="18dp"
        android:text="编辑资料"
        android:textColor="@color/hint_text"
        android:textSize="10sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"

        android:orientation="horizontal">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="19dp"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="23dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/page_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/page_briday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="@string/app_name"
                    android:textColor="@color/gray_text"
                    android:textSize="11sp" />

                <ImageView
                    android:id="@+id/page_sex"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="12dp"
                    android:src="@mipmap/ic_launcher" />
            </LinearLayout>

            <TextView
                android:id="@+id/page_sign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="还未填写个人签名"
                android:textColor="@color/hint_text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="66dp"
                android:paddingTop="5dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/page_fans"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#333333"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="粉丝"
                        android:textColor="#333333"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/page_attention"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#333333"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="关注"
                        android:textColor="#333333"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/page_getpraise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#333333"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="获赞"
                        android:textColor="#333333"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView

        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/white" />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_text" />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/white" />

    <TextView
        android:id="@+id/page_orderInfoPublishCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="26dp"
        android:text="发单任务数：23"
        android:textColor="@color/hint_text"
        android:textSize="11sp" />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="9dp"
        android:background="@color/white" />

    <TextView
        android:id="@+id/page_orderInfoReceiveCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="26dp"
        android:text="接单数：23"
        android:textColor="@color/hint_text"
        android:textSize="11sp" />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:background="@color/white" />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_text" />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="9dp"
        android:background="@color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="14dp"
        android:background="@color/white"
        android:paddingLeft="26dp"
        android:gravity="center_vertical"
        android:text="我发布的内容"
        android:textColor="@color/black"
        android:textSize="11sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dp" />
</LinearLayout>
