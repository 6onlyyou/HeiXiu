<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/activity_bg"
    tools:context="com.heixiu.errand.MVP.Message.AliBindActivity">
    <include layout="@layout/comm_title" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:orientation="vertical"
        android:background="@color/white">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="支付宝账号"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:textSize="13sp"/>
    <EditText
        android:singleLine="true"
        android:id="@+id/autonym_inname"
        android:background="@drawable/login_bg"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="13dp"
        android:textSize="14sp"
        android:hint="请填写支付宝账号"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="姓名"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:textSize="13sp"/>
    <EditText
        android:singleLine="true"
        android:id="@+id/bind_name"
        android:background="@drawable/login_bg"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="13dp"
        android:textSize="14sp"
        android:hint="请填写绑定姓名"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/bind_ali"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ali_bind"/>
</LinearLayout>
